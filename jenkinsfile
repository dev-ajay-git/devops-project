pipeline {
    agent { label 'docker' } // Make sure your agent has Docker + Java

    tools {
        maven 'maven' // This must match the Maven version in Jenkins â†’ Global Tool Configuration
    }

    environment {
        APP_NAME = 'project'
        DOCKER_IMAGE = "${APP_NAME}:latest"
        CONTAINER_NAME = 'ajay'
        PORT = '8080'
    }

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ“¥ Checking out code from SCM..."
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                echo "ğŸ”¨ Building the application with Maven..."
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ³ Building Docker image..."
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Stop Existing Container') {
            steps {
                echo "ğŸ›‘ Stopping old container if exists..."
                sh """
                    docker ps -q --filter "name=$CONTAINER_NAME" | grep -q . && \
                    docker stop $CONTAINER_NAME && docker rm $CONTAINER_NAME || \
                    echo "No container named $CONTAINER_NAME found."
                """
            }
        }

        stage('Run Docker Container') {
            steps {
                echo "ğŸš€ Running Docker container..."
                sh "docker run -d --name $CONTAINER_NAME -p $PORT:$PORT $DOCKER_IMAGE"
            }
        }
    }

    post {
        success {
            echo "âœ… Deployment successful! App is running in Docker container '$CONTAINER_NAME' on port $PORT ğŸ‰"
        }
        failure {
            echo "âŒ Deployment failed! Check above logs. ğŸ˜“"
        }
    }
}
